---
import { Picture } from "astro:assets";
import heroImage from "@assets/hero-nails.png";
import Link from "@components/Link.astro";
import { Icon } from "astro-icon/components";
---

<section class="mx-auto max-w-[1440px] grid lg:grid-cols-2 place-items-center pt-16 pb-8">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 400px) 100vw, 300px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Realizando magia en tus u√±as
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Relax & Style el sitio donde la magia se vuelve realidad en tus propias manos.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <Link
        href="#"
        href="https://web3templates.com/templates/astroship-starter-website-template-for-astro"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->

         Download for Free
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/surjithctly/astroship"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <!-- <Icon class="text-black w-4 h-4" name="bx:bxl-github" /> -->
         GitHub Repo
      </Link>
    </div>
  </div>
</section>