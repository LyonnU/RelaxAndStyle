---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "primary" | "secundary";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  primary: "bg-primary200 text-white rounded-3xl hover:bg-emerald-400 border-2 border-transparent",
  secundary: "bg-white border-2 border-emerald-300 hover:bg-emerald-100 text-black ",
  
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>